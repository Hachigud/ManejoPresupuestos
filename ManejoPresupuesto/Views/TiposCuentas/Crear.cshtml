@model TipoCuenta
@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}


<h1> Crear Tipo Cuenta</h1>
<h5>Se refiere a como podemos agrupar cuentas.
    Ejemplo: Tarjetas de credito, Prestamos, etc.</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" placeholder="Ingrese Aqui El Nombre ;)"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"> Crear</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>


</form>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}