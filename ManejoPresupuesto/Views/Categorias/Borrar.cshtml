@model Categoria

@{
    ViewData["Tittle"] = "Borrar Categoria";
}

<h3 class="mb-3">Esta seguro que desea borrar la categoria : @Model.Nombre ?</h3>


<form  asp-action="BorrarCategoria">
    <input type="hidden" asp-for="IdCategoria"/>
    <button class="btn btn-danger" type="submit">Borrar </button>

    <a  class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>